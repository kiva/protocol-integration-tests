{
  "name": "integration_tests",
  "version": "1.0.0",
  "private": true,
  "description": "Integration tests for Kiva Protocol microservices",
  "license": "none",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kiva/protocol.git"
  },
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "lint:fix": "tslint -p tsconfig.json -c tslint.json --fix",
    "test": "node -r dotenv/config node_modules/.bin/jest --runInBand",
    "test:concurrency": "node -r dotenv/config node_modules/.bin/jest --testRegex concurrency",
    "test:identity": "node -r dotenv/config node_modules/.bin/jest --testRegex identity",
    "test:remote": "node -r dotenv/config node_modules/.bin/jest --runInBand --testRegex remote"
  },
  "dependencies": {
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/supertest": "^2.0.10",
    "protocol-common": "^0.1.29",
    "dotenv": "^8.2.0",
    "kill-port": "^1.6.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.4.4",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3"
  },
  "jest": {
    "globals": {
      "factories": {}
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".e2e-spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
